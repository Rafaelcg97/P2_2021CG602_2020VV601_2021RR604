<div class="m-0 row justify-content-center bg-light">
    <div class="col-auto p-5 text-center">
        <h1 class="text-dark">Registros de Covid</h1>
        <br>
        <p class="text-secondary">El siguiente formulario es para lelvar el registro de casos reportados de Covid por departamento y genero.</p>
    </div>
    <h5 class="text-dark">Reportar casos</h5>
    <br>
    <br>
    <form asp-action="CrearRegistro">
        @*Inicio del formulario*@
        <div class="form-group row mb-4">
            <div class="col-sm-6">
                <div >
                    @Html.Label("lblDepartamento","Departamento")
                </div>
                <div>
                    @Html.DropDownList("idDepartamento", ViewData["listadoDeDepartamentos"] as SelectList,"Seleccionar un departamento", new {@class="form-control"})
                </div>
            </div>
            <div class="col-sm-6">
                <div>
                    @Html.Label("lblGenero","Descripcion")
                </div>
                <div>
                    @Html.DropDownList("idGenero", ViewData["listadoDeGeneros"] as SelectList,"Seleccionar un Genero", new {@class="form-control"})
                </div>
            </div>
        </div>
        <div class="form-group row mb-4">
            <div class="col-sm-4">
                <div>
                    @Html.Label("lblCasos","Casos Confirmados")
                </div>
                <div>
                    <input type="number" name="confirmados" class="col-sm-12"/>
                </div>
            </div>
            <div class="col-sm-4">
                <div>
                    @Html.Label("lblRecuperados","Numero de Recuperados")
                </div>
                <div>
                    <input type="number" name="recuperados" class="col-sm-12" />
                </div>
            </div>
            <div class="col-sm-4">
                <div>
                    @Html.Label("lblFallecidos","Numero de Fallecidos")
                </div>
                <div>
                    <input type="number" name="fallecidos" class="col-sm-12" />
                </div>
            </div>
        </div>
        <input type="submit" class="btn btn-success col-sm-12" value="Guardar Registro" style="margin:2em auto 2em" />
        @*Fin del formulario*@
    </form>

</div>

